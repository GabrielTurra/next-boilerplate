    "jsdom": "^25.0.0",
    "lint-staged": "^15.2.10",
    "plop": "^4.0.1",
    "storybook": "^8.5.6",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.1"
  },
  "lint-staged": {
    "**/*.js|ts|cjs|mjs|d.cts|d.mts|jsx|tsx|json|jsonc": [
      "biome check --write --no-errors-on-unmatched"
    ]
